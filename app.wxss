page {
    background: linear-gradient(120deg, #000000 0%, rgba(168, 51, 240, 0.3) 100%), #000000;
}

.btn-container {
    position: fixed;
    bottom: 0;
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 32rpx 32rpx;
    box-sizing: border-box;
  }

  .btn-container .top {
      width: 100%;
      margin: 8rpx 0;
  }
  
  .btn-container .bottom {
      width: 100%;
      display: flex;
      justify-content: space-between;
      margin: 8rpx 0;
  }

  .btn-container .bottom .btn {
      width: 47.5% !important;
  }
  
  .btn-primary {
    background-color: #A833F0;
    color: #FBFBFB;
  }

  .btn-share {
    background: white;
    color: #A833F0;
  }

  .btn-submit {
    background: #62DDF5;
    color: white;
  }
  
  .btn {
    margin: 0 !important;
    border-radius: 4px;
    width: 100% !important;
    height: 80rpx;
    box-shadow: 0 0 15px rgba(0,0,0,0.2);
  }