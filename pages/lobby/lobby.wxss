/* pages/lobby/lobby.wxss */
page {
    background-color: #0F100F;
    color: #FBFBFB;
    padding-bottom: 60px;
}
.avatar {
    border-radius: 50%;
    height: 120rpx;
    width: 120rpx;
}
.subTitle {
    margin: 16rpx;
}
.user_container {
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.bottomLine {
    border-bottom: 2rpx solid #FBFBFB ;
    margin: 0 24rpx;
}
.users_container {
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
    margin-bottom: 16rpx;
}
.name {
    font-size: 25rpx;
    margin-top: 8rpx;
}
.movie {
    background-size: cover !important;
    background-repeat: no-repeat !important;
    background-position: center !important;
    height: 400rpx;
    box-shadow: 0 0 15px rgba(0,0,0,0.2);   
    position: relative;
  }
.cards {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-row-gap: 8rpx;
    grid-column-gap: 48rpx;
    margin: 24rpx;
}
.btn {
    color: white;
    background-color: #A833F0 !important;
}
.submitbtn {
    background-color: white; 
    color: #A833F0;
    margin-left: 20px !important;
}
.avatarshadow {
    border-radius: 50%;
    border: 6rpx solid #A833F0;
}
.winnerbtn {
    margin-top: 16rpx;
}
.bottombar {
    display: flex;
    justify-content: space-between;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: #0F100F;
    padding: 16px;
}
.winnerbtn {
    color: white;
    background-color: #A833F0 !important;
}
.title {
    font-size: 30rpx;
    margin-left: 8rpx;
}

.vote-btn {
    position: absolute; 
    top: 16rpx;
    right: 16rpx;
    border: 2px solid #A833F0;
    height: 64rpx;
    width: 64rpx;
    box-sizing: border-box;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    color: white;
    font-size: 48rpx;
}

.active {
    background: #A833F0;
}

.users {
    display: flex;
    flex-direction: column;
    align-items: center;
}
.poster {
    margin-top: 32rpx;
    display: flex;
    justify-content: center;
}