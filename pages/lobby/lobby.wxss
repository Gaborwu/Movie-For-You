/* pages/lobby/lobby.wxss */
page {
    background-color: #0F100F;
    color: #FBFBFB;
}
.avatar {
    border-radius: 50%;
    height: 130rpx;
    width: 130rpx;
}
.user_container {
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.users_container {
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
    margin-bottom: 16rpx;
}
.movie {
    background-size: cover !important;
    background-repeat: no-repeat !important;
    background-position: center !important;
    height: 600rpx;
    box-shadow: 0 0 15px rgba(0,0,0,0.2);   
    position: relative;
  }
.cards {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-gap: 24rpx;
    margin: 24rpx;
}
.btn {
    color: white;
    background-color: #A833F0 !important;
}
.submitbtn {
    background-color: white; 
    color: #A833F0;
    margin-left: 8rpx;
}
.button {
    display: flex;
    justify-content: space-between;
    margin-bottom: 16rpx;
}
.title {
    font-size: 30rpx;
    margin-left: 8rpx;
}

.vote-btn {
    position: absolute; 
    top: 16rpx;
    right: 16rpx;
    border: 2px solid #A833F0;
    height: 64rpx;
    width: 64rpx;
    box-sizing: border-box;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    color: white;
    font-size: 48rpx;
}

.active {
    background: #A833F0;
}

.users {
    display: flex;
    flex-direction: column;
    align-items: center;
    max-width: 19%;
    flex-shrink: 1;
}