
<view class="show-frame">
  <view class="show-image" style="background: url(https://cloud-minapp-36818.cloud.ifanrusercontent.com/{{movie.thumbnail}})"></view>
</view>

<view class="show-container">
  <view class="show-info title">{{movie.movieName}}</view>
  <view class="show-info"><text class="show-bolder">Director:</text> {{movie.director}}</view>
  <view class="show-info"><text class="show-bolder">Release Year: </text> {{movie.release_year}}</view>
  <view class="show-info"><text class="show-bolder">Country: </text> {{movie.country}}</view>
</view>




