/**index.wxss**/


.index-container {
  background-color: #0F100F;
  color: #FBFBFB;
  background-image: url('https://cloud-minapp-36818.cloud.ifanrusercontent.com/1k8ZbS29P88KQLLB.jpeg');
  display: flex;
  justify-content: center;
  height: 100vh;
  background-position: center;
}

.btn {
  background-color: #A833F0;
  color:  #FBFBFB;
  bottom: 10%;
  position: absolute;
  transition: background 0.3s ease;
  border-radius: 4px;
  width: 90% !important;
  height: 80rpx;
  box-shadow: 0 0 15px rgba(0,0,0,0.2);
}
.buttton{
  font-family: Lobster;
  background-color: #6B9AC4;
  color:  #FBFBFB;
  bottom: 20%;
  position: absolute;
  transition: background 0.3s ease;
  border-radius: 4px;
  width: 90% !important;
  height: 80rpx;
}
.btn hover {
  background: #1BCB7F;
  color: white;
}


.title {
  font-family: Lobster;
  font-size: 100rpx;
  font-weight: bolder;
  display: flex;
  align-items: center;
  position: absolute;
  top: 15%;
}